<!DOCTYPE html>
<html lang="pt-br">

<head>
  <%- include('partials/head', {title1: 'CRUD | MEMBROS'})%>
</head>

<body>
  <!-- NAVBAR -->
  <%- include('partials/navbar')  %> 

  <!-- SIDEBAR -->
  <div class="d-flex">
    <nav class="sidebar ">
      <ul class="list-unstyled">
        <li><a href=""><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
        <li><a href=""><i class="fas fa-user"></i> Usuário</a></li>
        <li><a href=""><i class="fas fa-bars"></i> Menu</a></li>
        <li class="active"><a href=""><i class="fas fa-sign-out-alt"></i> Sair</a></li>
      </ul>
    </nav>

    <div class="container">
      <header>
        <%- include('partials/header', {title: 'Cadastrar Membros', button: 'Listar', rota: 'membros'})%>
      </header>
  
      <!-- INCLUDE -->
      <% if (success_msg) { %>
        <div class="alert alert-success" role="alert">
          <%= success_msg %>
        </div>
        <% } else if (error_msg) { %>
          <div class="alert alert-danger" role="alert">
            <%= error_msg %>
          </div>
          <% } %>
  
            <main>
              <!-- INICIO Form -->
              <div class="box">
                <form action="/membros" method="POST" class="row g-3">
                  <legend><b>Preencha os dados abaixo:</b></legend>
                  <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Nome Completo</label>
                    <div class="col-sm-10">
                      <input type="text" name="nome" id="nome" class="form-control" placeholder="Nome completo" required>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" id="email">
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">telefone</label>
                    <input type="text" class="form-control" name="telefone" id="telefone">
                  </div>
  
                  <fieldset class="row mb-3 mt-4">
                    <legend class="col-form-label col-sm-2 pt-0 ">Sexo</legend>
                    <div class="col-sm-10">
                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="genero" id="feminino" value="feminino" checked>
                        <label class="form-check-label">Feminino</label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="genero" id="masculino" value="masculino">
                        <label class="form-check-label">Masculino</label>
                      </div>
                    </div>
                  </fieldset>
  
                  <div>
                    <label class="data_nascimento"><b>Data de Nascimento</b></label>
                    <input type="date" name="data_nascimento" id="data_nascimento" class="inputUser" required>
                  </div>
  
                  <div class="col-12">
                    <label class="form-label">Endereço</label>
                    <input type="text" class="form-control" name="endereco" id="endereco"
                      placeholder="QNN .1234 Conj D Casa 000">
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">Cidade</label>
                    <input type="text" class="form-control" id="cidade" name="cidade">
                  </div>
                  <div class="col-md-4">
                    <label for="inputState" class="form-label">Estado</label>
                    <input type="text" class="form-control" id="estado" name="estado">
                  </div>
  
                  <div class="col-12">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                  </div>
                </form>
                </form>
              </div>
              <!-- FIM Form -->
            </main>
    </div>

  </div>
  

  <!-- <footer>
    <p>Edimilson Braz | 2021</p>
  </footer> -->


  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="public/js/bootstrap.min.js"></script>
  <script src="public/js/bootstrap.bundle.min.js"></script>
</body>

</html>