<!DOCTYPE html>
<html lang="pt-br">
<head>
  <%- include('partials/head', {title1: 'LISTAR | MEMBROS'})%>
</head>

<body>
  <!-- NAVBAR -->
  <%- include('partials/navbar.ejs')  %>

  <div class="container">
  

    <header>
      <%- include('partials/header', {title: 'Listar Membros', button: 'Cadastrar', rota: ''})%>
    </header>
    <div class="alert alert-success" role="alert">
      Usuário apagado com sucesso!
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <table class="table table-bordered table-hover ">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome</th>
          <th scope="col">Email</th>
          <th scope="col">Telefone</th>
          <th scope="col">cidade</th>
          <th scope="col">estado</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% membro.forEach((membro) => {  %>
          <tr>
            <th><%=membro.id %></th>
            <td><%=membro.nome%></td>
            <td><%=membro.email%></td>
            <td><%=membro.telefone%></td>
            <td><%=membro.cidade%></td>
            <td><%=membro.estado%></td>
            <td>
              <a href="/vis-membro/<%=membro.id %>"><button type="button" class="btn btn-sm btn-outline-primary ">Visualizar</button></a>

              <a href="/edit-membro/<%=membro.id %>"><button type="button" class="btn btn-sm btn-outline-warning ">Editar</button></a>

              <a href="/del-membro/<%=membro.id %>" data-bs-toggle="modal" data-bs-target="#apagarRegistro"><button type="button" class="btn btn-sm btn-outline-danger">Apagar</button></a>
            </td>
          </tr>
                      
        <% }) %> 
      </tbody>
    </table>

    <!-- Modal -->
    <div class="modal fade" id="apagarRegistro" tabindex="-1"     aria-labelledby="apagarRegistroLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header bg-danger text-white">
            <h5 class="modal-title" id="exampleModalLabel">Excluir Usuário</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Tem certeza que deseja excluir o usuário selecionado ?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" 
            data-bs-dismiss="modal">Cancelar</button>
            <% membro.forEach((membro) => {  %>
              <a href="/del-membro/<%=membro.id%>">
            <% }) %>
              <button type="button" class="btn btn-primary">Apagar</button>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>    

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="public/js/bootstrap.min.js" ></script>
    <script src="public/js/bootstrap.bundle.min.js"></script>

</body>
</html>