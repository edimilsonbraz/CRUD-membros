<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  

  <!-- BOOSTRAP -->
  <link href="public/css/bootstrap.min.css" rel="stylesheet">
  
  <title>Listar Membros</title>
</head>

<body>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-primary">
    <div class="container">
      <a class="navbar-brand" href="#">
        LOGO
        <!-- <img src="/images/logo_v2.png" altwidth="120" height="53"> -->
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item menu">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item menu">
            <a class="nav-link" href="/membros">Membros</a>
          </li>
          <li class="nav-item menu">
            <a class="nav-link" href="#">Blog </a>
          </li>
          <li class="nav-item menu">
            <a class="nav-link" href="#">Contato </a>
          </li>
        </ul>
        &ensp;<a href="/login" class="btn btn-secondary" >Login</a>
      </div>
      
    </div>
  </nav>
  <div class="container">
    <!-- INCLUDE -->
    <% if (success_msg) { %> 
      <div class="alert alert-success" role="alert">
        <%= success_msg %>
      </div>
    <% } else if (error_msg) { %> 
      <div class="alert alert-danger" role="alert">
        <%= error_msg %>
      </div> 
    <% } %> 

    <header>
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Listar Membros</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <a href="/">
            <button type="button" class="btn btn-sm btn-outline-success ">
              Cadastrar
            </button>
          </a>
        </div>
      </div>
    </header>

    <table class="table table-bordered table-hover ">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome</th>
          <th scope="col">Email</th>
          <th scope="col">Telefone</th>
          <th scope="col">cidade</th>
          <th scope="col">estado</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% membro.forEach((membro) => {  %>
          <tr>
            <th><%=membro.id %></th>
            <td><%=membro.nome%></td>
            <td><%=membro.email%></td>
            <td><%=membro.telefone%></td>
            <td><%=membro.cidade%></td>
            <td><%=membro.estado%></td>
            <td>
              <a href="/vis-membro/<%=membro.id %>"><button type="button" class="btn btn-sm btn-outline-primary ">Visualizar</button></a>
              <a href="/edit-membro/<%=membro.id %>"><button type="button" class="btn btn-sm btn-outline-warning ">Editar</button></a>
              <a href="/del-membro/<%=membro.id %>"><button type="button" class="btn btn-sm btn-outline-danger ">Apagar</button></a>
            </td>
          </tr>
                      
        <% }) %> 
      </tbody>
    </table>
  </div>    

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="public/js/bootstrap.min.js" ></script>
    <script src="public/js/bootstrap.bundle.min.js"></script>

</body>
</html>